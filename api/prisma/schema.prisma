generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  grupoId   Int?
  role      UserRole
  turmas    Turma[]
  grupo     Grupo?    @relation(fields: [grupoId], references: [id], onDelete: Cascade)
}

model Turma {
  name   String
  id     Int     @id @default(autoincrement())
  userId Int
  grupos Grupo[]
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Grupo {
  name       String
  id         Int         @id @default(autoincrement())
  turmaId    Int
  atividades Atividade[]
  turma      Turma       @relation(fields: [turmaId], references: [id], onDelete: Cascade)
  notes      Note[]
  user       User[]
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  grupoId   Int
  grupo     Grupo    @relation(fields: [grupoId], references: [id], onDelete: Cascade)
}

model Atividade {
  title       String
  description String?
  dueDate     DateTime?
  id          Int              @id @default(autoincrement())
  grupoId     Int?
  status      atividadeStatus  @default(NAO_INICIADA)
  grupo       Grupo?           @relation(fields: [grupoId], references: [id], onDelete: Cascade)
}

enum UserRole {
  ADMIN
  PROFESSOR
  ALUNO
}

enum atividadeStatus {
  NAO_INICIADA
  EM_PROCESSO
  AGUARDANDO_CORRECAO
  FINALIZADA
}
